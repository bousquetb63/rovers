<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @review.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @review.description %>
</p>

<p>
  <strong>Rating:</strong>
  <div class="star" data-score= <%= @review.rating %> ></div>
  <%= @review.rating %>
</p>

<p>
  <strong>Dogfriendly:</strong>
  <%= @review.dogfriendly %>
</p>

<p>
  <strong>User:</strong>
  <%= @review.user %>
</p>
<% if user_signed_in? %>
  <% if @review.user_id = current_user.id %>
    <%= link_to 'Edit', edit_review_path(@review) %> |
    <%= link_to 'Delete', @review, method: :delete, data: { confirm: 'Are you sure?' } %> |
  <% end %>
<% end %>
<%= link_to 'Back', root_path %>
<script>
  $('#star').raty({
  readOnly : true,
  starOn  : 'images/bone.png',
  starOff : 'images/nobone.png'
});
</script>
